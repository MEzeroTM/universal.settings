alias vialias="nvim ~/.aliasrc"
alias vizsh="nvim ~/.zshrc"
alias vibash="nvim ~/.bashrc"
alias refresh="source ~/.zshrc"
alias virc="nvim ~/.config/nvm/init.vim"
alias vigit="nvim ~/.gitconfig"

alias ..="cd .."

alias ls="ls -Fh --color=auto"
alias l="ls"
alias l1="ls -1"
alias ll="ls -l"
alias la="ls -lA"
alias la1="ls -1A"

alias ip="ip -c -br"

alias grep="grep --color=always"
alias egrep="egrep --color=always"

alias mkdir="mkdir -pv"

alias ports="netstat -tulpan"
alias memory="watch -n .1 free -whlt"
alias disk="sudo fdisk --list"
alias cpu="lscpu"

alias tar="pv -p tar"

alias df="df -haT --total"
alias du="~/.local/bin/_du"
alias ps0="ps -Ha -o \"uid user %cpu %mem pid fname command\""

alias xargs="xargs -I{}"

alias vi="nvim"

